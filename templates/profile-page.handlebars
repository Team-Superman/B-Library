<div class="row profile-container">
	<div class="col-xs-10 col-sm-10 col-md-3 col profile-content">
		<img src="../assets/images/avatar.png" class="img-responsive img-circle" alt="">
		<div class="profile-info">
			<h2>{{username}}</h2>
			<div class='col xs-11 profile-details'>
				<div><b>First name:</b> {{firstName}}</div>
				<div><b>Last name:</b> {{lastName}}</div>
				<div><b>Email address:</b> {{email}}</div>
			</div>
		</div>
	</div>
	<div class="col-xs-10 col-sm-10 col-md-8 col profile-content">
		<ul class="nav nav-tabs">
		  <li class="active"><a href="#read-books" data-toggle="tab" aria-expanded="true">Read Books</a></li>
		  <li class=""><a href="#favorite-authors" data-toggle="tab" aria-expanded="false">Favorite Authors</a></li>
		</ul>
		<div id="myTabContent" class="tab-content">
		  <div class="tab-pane fade active in" id="read-books">
					<div class="row collection-container">
						{{#each firstBooks}}
							<div id="book-field-{{@key}}" class="col-xs-6 col-md-3">
								<div class="thumbnail">
									<h2 class="hidden-title">{{book.title}}</h2>
                  <a href="#/books/{{book._id}}">
										<img src="{{book.cover._downloadURL}}" alt="">
									</a>
									<div class="caption">
										<p>
											<a href="#" class="btn btn-primary btn-sm btn-block btn-responsive book-learn-more" data-toggle="modal" data-target="#book-info">Learn more</a>
											<a href="#" class="btn btn-success btn-sm btn-block btn-responsive book-read-review" data-toggle="modal" data-target="#book-review">Read review</a>
										</p>
									</div>
								</div>
							</div>
						{{/each}}
					</div>
				<ul class="pagination">
					{{#for 1 totalBookPages 1}}
						<li><a class="page" href="/" onclick="return false">{{this}}</a></li>
					{{/for}}
				</ul>
			</div>
		  <div class="tab-pane fade" id="favorite-authors">
					<div class="row collection-container">
						{{#each firstAuthors}}
					  <div id="author-field-{{@key}}" class="col-xs-6 col-md-3">
					    <div class="thumbnail">
								<img src="{{picture._downloadURL}}" alt="">
					      <div class="caption">
					        <p>
										<a href="#" class="btn btn-primary btn-sm btn-block btn-responsive">Learn more</a>
										<a href="#" class="btn btn-success btn-sm btn-block btn-responsive">Add to favorites</a>
									</p>
					      </div>
					    </div>
					  </div>
						{{/each}}
					</div>
				<ul class="pagination">
					{{#for 1 totalAuthorsPages 1}}
						<li><a class="page" href="/" onclick="return false">{{this}}</a></li>
					{{/for}}
				</ul>
			</div>
		</div>
	</div>
</div>
