<div class="row">
    <div class="search-item" id="left-side-community-page">
        <div id="community-page-users" class="users panel">
            <div class="panel-heading">
                <h1 class="panel-title"><strong>Search user by name</strong></h1>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <div class="input-group">
                        <input class="form-control" id="user-firstName-search" type="text" placeholder="First name">
                        <span class="input-group-btn">
                        </span>
                    </div>
                    <br/>
                    <div class="input-group">
                        <input class="form-control" id="user-lastName-search" type="text" placeholder="Last name">
                        <span class="input-group-btn">
                        </span>
                    </div>
                </div>
                <button class="btn btn-default" id="search-user-button" type="button"><strong>Find user</strong></button>
            </div>
        </div>
    </div>
    <div class="results-item" id="left-side-community-page">
        <div id="community-page-users" class="panel panel-primary">
            <div class="panel-body">
                <div class="panel-heading">
                    <h1 class="panel-title" id="search-user"><strong>Results:</strong></h1>
                </div>

                <div class="alert alert-dismissible alert-warning" id="no-results-paragraph">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <p><strong>There is no such user!</strong></p>
                </div>

                <div class="users-info">
                    {{#Users}}
                        <div class="col-xs-10 col-sm-10 col-md-3 col profile-content">
                            <img src="../assets/images/avatar.png" class="img-responsive img-circle" alt="">
                            <div class="profile-info">
                                <h2>{{username}}</h2>
                                <div class='col xs-11 profile-details'>
                                    <div><b>First name:</b> {{firstName}}</div>
                                    <div><b>Last name:</b> {{lastName}}</div>
                                    <div><b>Email address:</b> {{email}}</div>
                                </div>
                            </div>
                        </div>
                    {{/Users}}
                </div>
            </div>
        </div>
    </div>
</div>