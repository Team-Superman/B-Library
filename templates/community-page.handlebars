<div class="row search-container">
  <div class="col-xs-10 col-sm-10 col-md-3 col search-content" id="left-side-community-page">
    <div class="community-page-search">
      <div class='col xs-11'>
        <div class="form-group search-group">
          <input class="form-control" id="user-firstName-search" type="text" placeholder="First name">
          <input class="form-control" id="user-lastName-search" type="text" placeholder="Last name">
          <a href="#" class="btn btn-primary btn-sm btn-block btn-responsive" id='search-user-button'>Search</a>
        </div>
      </div>
    </div>
  </div>
	<div class="col-xs-10 col-sm-10 col-md-8 col search-content">
    <h3 id="search-user">Results:</h3>
    <div class="alert alert-dismissible alert-warning" id="no-results-paragraph">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <p><strong>There is no such user!</strong></p>
    </div>
    <div class=" row users-info">
      {{#Users}}
          <div class="col-xs-10 col-sm-10 col-md-3 col profile-content">
              <img src="../assets/images/avatar.png" class="img-responsive img-circle" alt="">
              <div class="profile-info">
                  <h2>{{username}}</h2>
                  <div class='col xs-11 profile-details'>
                      <div><b>First name:</b> {{firstName}}</div>
                      <div><b>Last name:</b> {{lastName}}</div>
                      <div><b>Email address:</b> {{email}}</div>
                  </div>
              </div>
          </div>
      {{/Users}}
    </div>
  </div>
</div>
